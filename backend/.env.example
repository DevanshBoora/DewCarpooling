# Database Configuration
MONGO_URI=mongodb://localhost:27017/dewcarpooling
# Production: mongodb+srv://username:password@cluster.mongodb.net/dewcarpooling

# Server Configuration
NODE_ENV=development
PORT=5001
CORS_ORIGIN=*
# Production: https://yourdomain.com

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Service (for OTP)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=DewCarpooling <noreply@dewcarpooling.com>

# SMS Service (for emergency notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage
GRIDFS_BUCKET_NAME=uploads
MAX_FILE_SIZE=10485760

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
BACKGROUND_CHECK_API_KEY=your-background-check-service-key
BACKGROUND_CHECK_API_URL=https://api.backgroundcheck.com

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
MIXPANEL_TOKEN=your-mixpanel-token

# Emergency Services
EMERGENCY_SERVICES_API_KEY=your-emergency-api-key
EMERGENCY_SERVICES_URL=https://api.emergencyservices.com

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.dew.app

# WebSocket Configuration
SOCKET_IO_CORS_ORIGIN=*
# Production: https://yourdomain.com

# Redis (for session storage and caching)
REDIS_URL=redis://localhost:6379
# Production: redis://username:password@host:port

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# SSL/HTTPS (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Admin Configuration
ADMIN_EMAIL=admin@dewcarpooling.com
ADMIN_PHONE=+1234567890

# Feature Flags
ENABLE_BACKGROUND_CHECKS=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_EMERGENCY_SERVICES=false

# Development Only
DEV_SKIP_EMAIL_VERIFICATION=true
DEV_SHOW_OTP_IN_RESPONSE=true
