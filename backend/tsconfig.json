{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Node CommonJS to work well with ts-node/nodemon
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Outputs
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Speed/compat
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
